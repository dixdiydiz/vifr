{
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext",
    "target": "ESNext",
    "sourceMap": true,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitOverride": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "useUnknownInCatchVariables": false,
    "declaration": true,
    "declarationMap": false,
    "declarationDir": "dist/types",
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "types/**/*.ts"]
}